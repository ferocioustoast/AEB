        "right": [ { "type": "sine", "frequency": 500.0, "amplitude": 0.8 } ],
        "ambient": []
    },
    "internal_tension_limit": 0.1,
    "internal_tension_release_rate": 0.1,
    "modulation_matrix": [
        {
            "enabled": true,
            "source": "Internal: Shear",
            "target": "left.0.frequency",
            "amount": 300.0,
            "mode": "additive"
        },
        {
            "enabled": true,
            "source": "Internal: Shear",
            "target": "right.0.frequency",
            "amount": 300.0,
            "mode": "additive"
        }
    ]
